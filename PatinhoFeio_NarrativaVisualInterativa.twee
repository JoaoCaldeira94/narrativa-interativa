  right: 0;
  display: flex;
  justify-content: center;
  gap: 2em;
  z-index: 20;
}

@media (max-width: 768px) {
  .botoes {
    gap: 0.5em;}
}


/* === Nomes Créditos == */

.creditos {
  font-size: 18px;
  font-family: 'Lexend', sans-serif;
  font-weight: 500;
  opacity: 50%;
  left: 2em;
  bottom: 2em;
  position: fixed;
  line-height: 1.5em;
  letter-spacing: 0.03rem;
}

@media (max-width: 768px) {

.creditos {
  font-size: 15px !important;
  bottom: 8em !important;}
}

/* === Estilo dos links como botões === */
tw-link,
tw-link:visited
{
  display: inline-block;
  padding: 0.5em 2em;
  border-radius: 100px;
  background: rgba(255, 255, 255, 0.20);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  color: #F8F6F0 !important;
  text-decoration: none;
  font-family: 'Lexend', sans-serif;
  font-weight: 500;
  font-size: 20px;
  letter-spacing: 0.04rem;
  text-shadow: 0px 0px 5px black;
  transition: background 0.4s ease, backdrop-filter 0.4s ease;
  box-shadow: 0 0 2px 2px rgba(64, 64, 64, 0.40);
  will-change: backdrop-filter;
}



tw-link:hover {
  box-shadow: 0 0 15px 5px rgba(64, 64, 64, 0.25);
  
  
background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  color: #F8F6F0;
 
}

@media (max-width: 768px) {
  tw-link,
  tw-link:visited{
    padding: 0.8em 1.2em;
  font-size: 17px;
  line-height: 1em;
  letter-spacing: 0.03em;
  color: #F8F6F0 !important;
  text-align: center !important;}
}


.texto, .botoes, tw-link {
  transition: background 0.4s ease, backdrop-filter 0.4s ease, -webkit-backdrop-filter 0.4s ease;
}